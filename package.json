{
    "name": "time-manager-frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.15.1",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "eslint-config-react-app": "^6.0.0",
        "node-sass": "^6.0.1",
        "react": "^17.0.2",
        "react-calendar": "^3.5.0",
        "react-dom": "^17.0.2",
        "react-scripts": "4.0.3",
        "web-vitals": "^1.1.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint . --ignore-path .gitignore --no-error-on-unmatched-pattern",
        "lint:fix": "eslint . --fix --ignore-path .gitignore",
        "lint:style": "stylelint --ignore-path .gitignore \"./**/*.scss\"",
        "lint:style:fix": "npm run lint:style -- --fix",
        "format": "prettier --ignore-path .gitignore --check .",
        "format:fix": "prettier --ignore-path .gitignore . --write",
        "prepare": "husky install"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint": "^7.11.0",
        "eslint-config-metarhia": "^7.0.1",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-sonarjs": "^0.11.0",
        "husky": "^7.0.4",
        "prettier": "^2.5.0",
        "stylelint": "^14.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended": "^6.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-declaration-use-variable": "^1.7.3"
    }
}
